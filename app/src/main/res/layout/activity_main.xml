<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/twTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".1"
        android:text="Calculadora"
        android:textSize="30sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/twResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".1"
        android:text=""
        android:textSize="30sp"
        android:gravity="end"/>

    <TextView
        android:id="@+id/twOperando"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".1"
        android:text=""
        android:textSize="26sp"
        android:gravity="end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSiete"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="7" />

        <Button
            android:id="@+id/btnOcho"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="8" />

        <Button
            android:id="@+id/btnNueve"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="9"/>

        <Button
            android:id="@+id/btnSuma"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCuatro"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="4"/>

        <Button
            android:id="@+id/btnCinco"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="5"/>

        <Button
            android:id="@+id/btnSeis"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="6"/>

        <Button
            android:id="@+id/btnResta"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUno"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="1"/>

        <Button
            android:id="@+id/btnDos"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="2"/>

        <Button
            android:id="@+id/btnTres"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="3"/>

        <Button
            android:id="@+id/btnMulti"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="*"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCero"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="0"/>

        <Button
            android:id="@+id/btnResultado"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="="/>

        <Button
            android:id="@+id/btnDel"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="DEL"/>

        <Button
            android:id="@+id/btnDivi"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="/"/>

    </LinearLayout>






</androidx.appcompat.widget.LinearLayoutCompat>